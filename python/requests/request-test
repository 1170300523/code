import requests

def getHTML(url):
	try:
		r = requests.get(url)
		r.raise_for_status()
		r.encoding = r.apparent_encoding
		return r.text
	except:
		raise "Error !"

def getHTMLHead(url):
	try:
		r = requests.head(url)
		r.raise_for_status()
		r.encoding = r.apparent_encoding
		return r.text
	except:
		raise "Error !"

def getPic(url):
	r = requests.get(url)
	with open('x.jpg','wb') as f:
		f.write(r.content)

if __name__ == '__main__':
	url = "https://i0.hdslb.com/bfs/archive/4c804426759d644842a2e6c7a4983720c7b8fca2.jpg@880w_440h.jpg"
	getPic(url)